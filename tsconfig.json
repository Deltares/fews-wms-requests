{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "jsx": "preserve",
    "resolveJsonModule": true,
    "lib": ["ES2022", "dom"],
    "types": ["vite/client"],

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,

    "strict": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "vite.config.ts"],
  "exclude": ["node_modules"]
}
