{
  "name": "@deltares/fews-wms-requests",
  "version": "4.0.0-rc.1",
  "description": "Library for making requests to the FEWS WMS-T webservice",
  "author": {
    "name": "Werner Kramer",
    "email": "werner.kramer@deltares.nl"
  },
  "license": "MIT",
  "keywords": [
    "FEWS",
    "Delft-FEWS",
    "Web Map Services",
    "WMS-T",
    "WMS",
    "OGC:WMS"
  ],
  "private": false,
  "type": "module",
  "module": "./dist/fews-wms-requests.js",
  "exports": {
    ".": {
      "import": "./dist/fews-wms-requests.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc && vite build",
    "doc": "typedoc --out doc src",
    "lint": "eslint . | npm run prettier",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier . --check",
    "format": "prettier .  --write",
    "test:unit": "vitest run test/unit",
    "test:e2e": "vitest run test/e2e",
    "test": "vitest",
    "json2ts": "curl https://fewsdocs.deltares.nl/webservices/wms/schemas/wms/pi_wms_get_capabilities.json | json2ts > src/response/getCapabilitiesResponse.ts --style.singleQuote --no-style.semi & curl https://fewsdocs.deltares.nl/webservices/wms/schemas/wms/pi_wms_legend.json | json2ts > src/response/getLegendGraphicResponse.ts --style.singleQuote --no-style.semi",
    "sonar": "sonar-scanner -Dsonar.host.url=$SONAR_URL -Dsonar.login=$SONAR_TOKEN -Dsonar.projectKey=$SONAR_KEY -Dsonar.projectName='Delft-FEWS Web OC WMS Requests'"
  },
  "dependencies": {
    "@deltares/fews-web-oc-utils": "^2.0.1"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^22.19.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "fetch-mock": "^12.6.0",
    "json-schema-to-typescript": "^15.0.4",
    "prettier": "^3.6.2",
    "sonarqube-scanner": "^4.3.2",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.14",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.2",
    "vitest": "^4.0.8"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Deltares/fews-wms-requests"
  },
  "bugs": {
    "url": "https://github.com/Deltares/fews-wms-requests/issues"
  },
  "publishConfig": {
    "access": "public",
    "tag": "rc",
    "registry": "https://registry.npmjs.org"
  }
}
